<section id="leads">
	<div class="container">
		<h2 style="display: inline-block;">Contactos</h2>
		<%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger pull-right" %>
		<div class="table-responsive">
			<table class="table table-striped table-bordered">
				
				<thead>
					<tr>
						<th>Nombre</th>
						<th>Apellido</th>
						<th class="hidden-xs">Email</th>
						<th class="hidden-xs">Tel√©fono</th>
						<th class="hidden-xs">Mensaje</th>
						<th class="text-center">Contactado</th>
					</tr>
				</thead>
				
				<tbody>

					<% @lead.each do |lead| %>

						<tr>
							<td><%= link_to lead.first_name, edit_lead_path(lead) %></td>
							<td><%= link_to lead.last_name, edit_lead_path(lead) %></td>
							<td class="hidden-xs"><%= link_to lead.email, edit_lead_path(lead) %></td>
							<td class="hidden-xs"><%= link_to lead.telephone, edit_lead_path(lead) %></td>
							<td class="hidden-xs"><%= link_to (truncate(lead.message, length: 100)), edit_lead_path(lead) %></td>
							<td class="text-center">
								<% if lead.contacted == "No" %>
									<%= image_tag('notcontacted.png', class: "tbl-img")%>
								<% else %>
									<%= image_tag('contacted.png', class: "tbl-img")%>
								<% end %>
							</td>	
						</tr>

					<%end %>

				</tbody>
			</table>
		</div><!-- .table-responsive -->
		<div class="text-center">
		  <%= will_paginate @lead, renderer: BootstrapPagination::Rails %>
		</div>
	</div><!-- .container -->
</section>