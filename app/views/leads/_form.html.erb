  <div class="row">

    <div class="form-group col-xs-6">
      <label>Nombre:</label>
      <%= f.text_field :first_name, class: "form-control", placeholder: "Nombre...", required: true %>
    </div>

    <div class="form-group col-xs-6">
      <label>Apellido:</label>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Apellido...", required: true %>
    </div>

    <div class="form-group col-xs-6">
      <label>Email:</label>
      <%= f.email_field :email, class: "form-control", placeholder: "Email...", required: true %>
    </div>

    <div class="form-group col-xs-12">
      <label>MENSAJE:</label>
      <%= f.text_area :message, rows: "4", class: "form-control", placeholder: "Escribe su mensaje aquÃ­...", required: true %>
    </div>

  </div><!-- .row -->

  <%= button_tag class: "btn btn-lg btn-info pull-right" do %>
    Guardar
  <% end %>

<% end %><!-- END NEW LEAD FORM -->
