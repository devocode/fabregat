<div id="invite">

	<p>
		Here we are! A group of <span class="highlight">professionals who love and enjoy</span> what we do.
	</p>

</div>

<div id="contact">

	<div class="container">

		<h1>Get in touch!</h1>
		<h3>We would love to hear from you.</h3>

		<hr>

		<%= form_for Lead.new do |f| %>
			<div class="row">

				<div class="form-group col-xs-6">
					<label>Name</label>
					<%= f.text_field :first_name, class: "form-control", placeholder: "Your name...", required: true %>
				</div>

				<div class="form-group col-xs-6">
					<label>Last Name</label>
					<%= f.text_field :last_name, class: "form-control", placeholder: "Your last name...", required: true %>
				</div>

				<div class="form-group col-xs-6">
					<label>Email</label>
					<%= f.email_field :email, class: "form-control", placeholder: "Your email...", required: true %>
				</div>

				<div class="form-group col-xs-6">
					<label>Telephone</label>
					<%= f.text_field :telephone, class: "form-control", placeholder: "Your phone..." %>
				</div>

				<div class="form-group col-xs-12">
					<label>Message</label>
					<%= f.text_area :message, rows: "4", class: "form-control", placeholder: "Leave us a message here...", required: true %>
				</div>

				<%= button_tag class: "btn btn-lg nav-button" do %>
					Submit
				<% end %>

			</div><!-- .row -->

		<% end %>

	</div><!-- .container -->

</div>

